# {{ ansible_managed }}

{% for key, value in logrotate.iteritems()|sort %}
{%   if value is sameas true %}
{{ key }}
{%   elif value is string %}
{{ key }} {{ value|string }}
{%   elif value is number %}
{{ key }} {{ value|int }}
{%   else %}
{{ key }} {{ value }}
{%   endif %}
{% endfor %}
{% if logrotate_files|length > 0 %}

{%   for f in logrotate_files|sort %}
{{ f.files|join(' ') }} {
{%     for key, value in f.options.iteritems()|sort %}
{%       if value is sameas true %}
    {{ key }}
{%       elif value is string %}
    {{ key }} {{ value|string }}
{%       elif value is number %}
    {{ key }} {{ value|int }}
{%       elif value is iterable %}
    {{ key }}
{%         for i in value %}
        {{ i }}
{%         endfor %}
    endscript
{%       else %}
    {{ key }} {{ value }}
{%       endif %}
{%     endfor %}
}
{%     if not loop.last %}

{%     endif %}
{%   endfor %}
{% endif %}
